{
  "name": "customizable-calendar",
  "version": "1.0.0",
  "description": "A web-based calendar application with YAML configuration support",
  "main": "index.html",
  "scripts": {
    "dev": "tsc -p tsconfig.dev.json && cp dist/script-bundle.js script.min.js && cp src/style.css style.min.css && python3 -m http.server 8000",
    "build": "node scripts/build.js",
    "lint": "eslint src/**/*.ts scripts/**/*.js",
    "lint:fix": "eslint src/**/*.ts scripts/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist && rm -f src/*.js script.min.js style.min.css",
    "validate": "npm run lint && npm run test",
    "start": "npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephenyu/calendar.git"
  },
  "keywords": [
    "calendar",
    "yaml",
    "web-app",
    "customizable",
    "frontend",
    "javascript",
    "typescript",
    "html",
    "css"
  ],
  "author": "Stephen Yu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stephenyu/calendar/issues"
  },
  "homepage": "https://stephenyu.github.io/calendar/",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "luxon": "^3.4.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cssnano": "^7.0.6",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "terser": "^5.37.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not < 2%"
  ]
}
